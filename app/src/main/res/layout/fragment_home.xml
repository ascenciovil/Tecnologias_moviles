<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Mapa -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/search_bg"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top">

        <EditText
            android:id="@+id/search_input"
            android:hint="Busca aquí"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp"
            android:imeOptions="actionSearch"
            android:inputType="text" />

        <ImageView
            android:src="@android:drawable/ic_menu_search"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <!-- Botón flotante -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="80dp">

        <Button
            android:id="@+id/btnFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BBA7F5"
            android:padding="12dp"
            android:text="Tomar foto"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_ruta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BBA7F5"
            android:padding="12dp"
            android:text="Empezar ruta"
            android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/btn_seguir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BBA7F5"
            android:padding="12dp"
            android:text="Finalizar seguimiento"
            android:layout_marginLeft="16dp"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/dataLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:background="@color/purple_500"
        android:visibility="gone">

        <!-- Pasos -->
        <TextView
            android:id="@+id/pasosText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasos: 0"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingTop="24dp"
            android:visibility="gone"/>

        <!-- Distancia recorrida -->
        <TextView
            android:id="@+id/distanciaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia recorrida: 0 m"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:paddingTop="16dp"
            android:visibility="gone"/>

        <!-- Velocidad promedio -->
        <TextView
            android:id="@+id/velocidadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Velocidad promedio: 0 m/s"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:paddingTop="16dp"
            android:visibility="gone"/>

        <!-- Botón de continuar -->
        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/purple_500" />

    </LinearLayout>


</FrameLayout>
