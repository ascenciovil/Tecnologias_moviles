<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ui.profile.ProfileFragment">

    <!-- Progress Bar para carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- NUEVO: Indicador offline -->
    <LinearLayout
        android:id="@+id/offlineIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF9C4"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:elevation="4dp">

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text=""
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Est谩s trabajando sin conexi贸n"
            android:textColor="#8D6E00"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/offlineProgressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Reintentar"
            android:textSize="12sp"
            android:textColor="#8D6E00"
            android:background="@drawable/button_offline_retry"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

    <!-- ScrollView con contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#F8F9FA"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header con fondo de color -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Informaci贸n del usuario -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_nombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tu_nombre"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/text_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tu_usuario"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/text_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tu_email_ejemplo"
                            android:textSize="14sp"
                            android:textColor="#4285F4"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                    <!-- Solo bot贸n Editar -->
                    <Button
                        android:id="@+id/boton_editar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editar"
                        android:textSize="14sp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="@color/design_default_color_primary"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#F8F9FA" />

            <!-- Secci贸n Sobre m铆 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sobre_mi"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/text_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tu_descripcion_personal"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:padding="16dp"
                    android:background="#F8F9FA"
                    android:drawablePadding="8dp" />

            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#F8F9FA" />

            <!-- Secci贸n Mis rutas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mis_rutas_publicadas"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/layout_rutas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#F8F9FA" />

            <!-- Secci贸n Logros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis Logros"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/layout_logros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Espaciador final -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="#F8F9FA" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>