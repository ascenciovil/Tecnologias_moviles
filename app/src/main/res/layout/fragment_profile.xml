<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ui.profile.ProfileFragment">

    <!-- Progress Bar para carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- ScrollView con contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#F8F9FA">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header con fondo de color -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Información del usuario -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_nombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tu_nombre"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/text_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tu_usuario"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/text_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tu_email_ejemplo"
                            android:textSize="14sp"
                            android:textColor="#4285F4"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                    <!-- Solo botón Editar -->
                    <Button
                        android:id="@+id/boton_editar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editar"
                        android:textSize="14sp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:background="@color/design_default_color_primary"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#F8F9FA" />

            <!-- Sección Sobre mí -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sobre_mi"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/text_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tu_descripcion_personal"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:padding="16dp"
                    android:background="#F8F9FA"
                    android:drawablePadding="8dp" />

            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#F8F9FA" />

            <!-- Sección Mis rutas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mis_rutas_publicadas"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/layout_rutas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#F8F9FA" />

            <!-- Sección Logros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis Logros"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/layout_logros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Espaciador final -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="#F8F9FA" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>